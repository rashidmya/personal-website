<section id="about">
  <% if (config.description) { %>
    <%- markdown(config.description) %>
  <% } %>
</section>

<section id="writing">
  <span class="h1"><a href="<%- url_for("archives") %>">recent blog posts</a></span>
  <ul class="post-list">
    <% site.posts.filter(p => p.categories.data.some(c => c.name === 'blog')).sort('date', 'desc').limit(3).each(function(post, i){ %>
      <li class="post-item">
        <%- partial('_partial/post/date', { post: post, class_name: 'meta' }) %>
        <span><%- partial('_partial/post/title', { post: post, index: true, class_name: '' }) %></span>
      </li>
    <% }); %>
  </ul>
</section>

